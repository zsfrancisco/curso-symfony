{% extends 'base.html.twig' %}

{% block title %}Asignatura index{% endblock %}

{% block body %}
    <h1>Asignatura index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for asignatura in asignaturas %}
            <tr>
                <td>{{ asignatura.id }}</td>
                <td>{{ asignatura.nombre }}</td>
                <td>
                    <a href="{{ path('asignatura_show', {'id': asignatura.id}) }}">show <img src=" {{ asset('img/busqueda.png') }} " ></a>
                    <a href="{{ path('asignatura_edit', {'id': asignatura.id}) }}">edit <img src=" {{ asset('img/editar.png') }} " ></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('asignatura_new') }}">Create new</a>
    <a class="btn btn-primary" href="{{ path('panel') }}">Home</a>
{% endblock %}
